<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppConselho.MainPage"
             BackgroundColor="AliceBlue">

    <StackLayout
        Margin="20"
        BackgroundColor="Wheat">
        
        

        <Label Text="Receba a mensagem" TextColor="Black" 
               FontAttributes="Bold" FontSize="Title" HorizontalOptions="Center" 
               Margin="1,30"/>

        <Button Text="Me clicka" Clicked="BtnConselho_Clicked"  
                x:Name="BtnConselho"
                BackgroundColor="Beige" Padding="10"
                Margin="1,30" Scale="2"
                HorizontalOptions="Center"/>

        <Label  Text="{Binding Conselho}"
                x:Name="Conselho" TextColor="Black">
            
        </Label>
               
                
        




    </StackLayout>

</ContentPage>
